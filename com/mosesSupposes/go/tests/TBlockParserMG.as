s TBlockParserMG extends GoTestBase {		protected var tween : BlockTweenMG;				public function TBlockParserMG() 		{						var targ:Sprite = super.box(20);						tween = BlockParserMG.go({ target:targ,								 	   x:200,									   y:200,									   scaleX:5,									   scaleY:5,									   rotation:180,									   delay:1,									   duration:3,									   easing:Back.easeInOut									 });						// test UI			super.addButtonUI(tween, 1.5);			var b:Button = new Button();			addChild(b);			b.label = "reset";			b.x = buttonX;			b.y = buttonY;			b.addEventListener(MouseEvent.MOUSE_DOWN, reset);		}				protected function reset(event : MouseEvent) : void {			trace("\n* reset *");			tween.stop();			removeChild(tween.target);			tween.target = super.box();		}	}}